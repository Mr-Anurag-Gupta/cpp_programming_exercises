{
  "tasks": [
    {
      "type": "shell",
      "label": "Build with GCC",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out",
        "--debug"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "Build with Clang++",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out",
        "--debug"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Build with CL.exe (Win32)",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/Fe:",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    }
  ],
  "version": "2.0.0"
}
